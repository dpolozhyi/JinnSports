@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    @Styles.Render("~/Content/DataTableStyles")
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Teams</h3>
    </div>
    <div class="box-body">
        <table id="teamTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Team</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/Scripts/DataTable")
    <script>
    $(document).ready(function () {
        $("#teamTable").DataTable({
            "processing": false,
            "serverSide": true,
            "filter": false,
            "orderMulti": false,
            "ajax": {
                url: '/api/Team/LoadTeams',
                type: 'GET',
                datatype: 'json',
                dataSrc: 'data'
            },
            "columns": [
                    {
                        'data': 'Name', 'autoWidth': true,
                        'render': function (data, type, full, meta) {
                            return "<a href='TeamDetails/Details?Id=" + full.Id + "'>" + data + '</a>';
                        }

                    }
            ]
        });
    });
    </script>
}